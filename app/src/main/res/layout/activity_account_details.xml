<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layContent"
    android:layout_margin="15dp"
    tools:context="com.accountdetails.athirakr.myapplication.views.AccountDetailsActivity">

    <RelativeLayout
        android:id="@+id/layAccountInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_bottomline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtAccountInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottomline"
            android:layout_toLeftOf="@+id/ivAccountInfo"
            android:padding="5dp"
            android:text="Account Details" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivAccountInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_nav_right"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layServices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_bottomline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layAccountInfo">

        <TextView
            android:id="@+id/txtServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottomline"
            android:layout_toLeftOf="@+id/ivServices"
            android:padding="5dp"
            android:text="Services Details" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_nav_right"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layScriptionDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_bottomline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layServices">

        <TextView
            android:id="@+id/txtScriptionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottomline"
            android:layout_toLeftOf="@+id/ivSubScriptionDetails"
            android:padding="5dp"
            android:text="Subscriptions Details" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivSubScriptionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_nav_right"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layProductDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_bottomline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layScriptionDetails">

        <TextView
            android:id="@+id/txtProductDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivProductDetails"
            android:padding="5dp"
            android:text="Subscriptions Related Product Details" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivProductDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_nav_right"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
